<Page x:Class="lib2122.Pages.ReadersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lib2122.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReadersPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Height="50"
                 Width="150"
                 Name="searchTb"
                 SelectionChanged="searchTb_SelectionChanged"/>

        <ListView Grid.Row="1"
                  Grid.ColumnSpan="4"
                  Grid.RowSpan="3"
                  Name="readersLv"
                  ItemsSource="{Binding readers}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Width="350">
                            <TextBlock Text="{Binding FIO}"
                                       FontSize="18"/>
                            <TextBlock Text="{Binding NumberPhone}"
                                       FontSize="18"/>
                            <TextBlock Text="{Binding Email}"
                                       FontSize="18"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding BirthDate, StringFormat='dd.mm.yyyy'}"
                                       FontSize="18"/>
                            <TextBlock Text="{Binding Gender.Name}"
                                       FontSize="18"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
