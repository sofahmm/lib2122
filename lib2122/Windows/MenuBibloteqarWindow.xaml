<Window x:Class="lib2122.Windows.MenuBibloteqarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lib2122.Windows"
        mc:Ignorable="d"
        Title="MenuBibloteqarWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Grid.Column="0"
                Content="Читатели"
                FontSize="30"
                FontWeight="DemiBold"
                Background="DarkSlateGray"
                Foreground="Wheat"
                Name="readerBtn"
                Click="readerBtn_Click"/>
        <Button Grid.Row="1"
                Grid.Column="0"
                Content="Книги"
                FontSize="30"
                FontWeight="DemiBold"
                Background="DarkSlateGray"
                Foreground="Wheat"
                Name="bookBtn"
                Click="bookBtn_Click"/>
        <Button Grid.Row="2"
                Grid.Column="0"
                Content="Авторы"
                FontSize="30"
                FontWeight="DemiBold"
                Background="DarkSlateGray"
                Foreground="Wheat"
                Name="authorBtn"
                Click="authorBtn_Click"/>
        <Button Grid.Row="3"
                Grid.Column="0"
                Content="Выход"
                FontSize="30"
                FontWeight="DemiBold"
                Background="IndianRed"
                Foreground="Wheat"
                Name="ExitBtn"
                Click="ExitBtn_Click"/>

        <Frame Name="navFrame"
               Grid.Column="1"
               Grid.ColumnSpan="3"
               Grid.RowSpan="4"/>
    </Grid>
</Window>
