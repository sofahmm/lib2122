<Window x:Class="lib2122.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lib2122"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Text="Авторизация"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="DarkRed"/>
        <TextBlock Grid.Column="0"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Text="Логин:"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="DarkRed"/>
        <TextBlock Grid.Column="0"
                   Grid.Row="2"
                   Grid.ColumnSpan="2"
                   Text="Пароль:"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="DarkRed"/>
        <TextBox Grid.Column="2"
                 Grid.Row="1"
                 Grid.ColumnSpan="2"
                 Height="50"
                 Width="300"
                 HorizontalAlignment="Left"
                 Margin="10 0 0 0"
                 Name="loginTb"
                 FontSize="20"
                 VerticalContentAlignment="Center"
                 Padding="5 0 0 0"/>
        <PasswordBox Grid.Column="2"
                 Grid.Row="2"
                 Grid.ColumnSpan="2"
                 Height="50"
                 Width="300"
                 HorizontalAlignment="Left"
                 Margin="10 0 0 0"
                 Name="passwordPb"
                 FontSize="20"
                 VerticalContentAlignment="Center"
                 Padding="5 0 0 0"/>
        <Button Grid.Column="1"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Height="50"
                Width="200"
                Background="DarkSalmon"
                Foreground="Wheat"
                Content="Войти"
                FontSize="20"
                FontWeight="Bold"
                Name="loginBtn"
                Click="loginBtn_Click"/>
    </Grid>
</Window>
